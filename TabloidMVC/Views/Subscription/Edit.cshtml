@model TabloidMVC.Models.Subscription

@{
    ViewData["Title"] = "Edit";
}

<h1>Unsubscribe</h1>

<h4>Subscription</h4>
<hr />
<p> 
    Your subscription ends today @Model.EndDateTime
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="SubscriberUserProfileId" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="ProviderUserProfileId" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="BeginDateTime" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="EndDateTime" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Unsubscribe" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
