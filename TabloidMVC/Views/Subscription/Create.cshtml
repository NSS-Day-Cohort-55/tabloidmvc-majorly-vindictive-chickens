@model TabloidMVC.Models.Subscription

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Subscription</h4>
<hr />
<p> 
    Your subscription will start from today @Model.BeginDateTime
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="SubscriberUserProfileId" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <input asp-for="ProviderUserProfileId" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <input asp-for="BeginDateTime" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
