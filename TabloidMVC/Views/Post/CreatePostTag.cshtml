@model TabloidMVC.Models.ViewModels.PostTagViewModel

@{
    ViewData["Title"] = "CreatePostTag";
}

<h1>CreatePostTag</h1>

<h4>PostTagViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePostTag">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TagOptions" class="control-label"></label>
                <select multiple asp-for="TagIds" class="form-control">
                    <option value="">Select Tag(s)</option>
                   
                        @foreach (Tag tag in Model.TagOptions)
                        {
                            <option value="@tag.Id">@tag.Name</option>
                        }
                    
                </select>
                <span asp-validation-for="TagIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
