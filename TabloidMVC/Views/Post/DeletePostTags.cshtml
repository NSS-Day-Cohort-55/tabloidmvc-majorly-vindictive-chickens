@model TabloidMVC.Models.ViewModels.PostTagViewModel

@{
    ViewData["Title"] = "DeletePostTags";
}

<h1>DeletePostTags</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PostTagViewModel</h4>
    <hr />
    <dl class="row">
    </dl>
    
    <form asp-action="DeletePostTags">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TagOptions" class="control-label"></label>
                <select multiple asp-for="TagIds" class="form-control">
                    <option value="">Select Tag(s)</option>
                   
                        @foreach (Tag tag in Model.TagOptions)
                        {
                            <option value="@tag.Id">@tag.Name</option>
                        }
                    
                </select>
                <span asp-validation-for="TagIds" class="text-danger"></span>
            </div>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
