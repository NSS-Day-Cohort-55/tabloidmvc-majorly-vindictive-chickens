@model TabloidMVC.Models.ViewModels.PostReactionViewModel

@{
    ViewData["Title"] = "CreatePostReaction";
}

<h1>CreatePostReaction</h1>

<h4>PostReactionViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePostReaction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">
                <label asp-for="ReactionOptions" class="control-label"></label>
                <select multiple asp-for="ReactionIds" class="form-control">
                    <option value="">Select Reaction(s)</option>
                   
                        @foreach (Reaction reaction in Model.ReactionOptions)
                        {
                            <option value="@reaction.Id">"@reaction.ImageLocation"</option>
                        }
                    
                </select>
                <span asp-validation-for="ReactionIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
